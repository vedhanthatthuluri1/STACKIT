rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    match /users/{userId} {
      allow read;
      allow create: if request.auth != null;
      allow update: if request.auth.uid == userId;

      // Users can manage their own votes
      match /votes/{voteId} {
        allow read, create, delete: if request.auth.uid == userId;
      }
    }

    match /questions/{questionId} {
      allow read;
      allow create: if request.auth.uid == request.resource.data.authorId;
      
      // Allow updating votes, views, and answersCount, but not other fields
      allow update: if request.auth != null &&
                      (request.resource.data.votes != resource.data.votes ||
                       request.resource.data.views != resource.data.views ||
                       request.resource.data.answersCount != resource.data.answersCount);

      // Anyone authenticated can create an answer
      match /answers/{answerId} {
        allow read;
        allow create: if request.auth != null && request.auth.uid == request.resource.data.authorId;
        
        // Allow updating votes on an answer
        allow update: if request.auth != null &&
                        request.resource.data.votes != resource.data.votes;
      }
    }
  }
}
