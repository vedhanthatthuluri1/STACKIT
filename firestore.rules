rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    match /users/{userId} {
      allow read; // Allow any user to read profiles
      allow write: if request.auth.uid == userId; // Only user can write to their own profile
    }

    match /questions/{questionId} {
      allow read;
      allow create: if request.auth != null;
      allow update, delete: if request.auth.uid == resource.data.authorId;
    }

    match /questions/{questionId}/answers/{answerId} {
      allow create: if request.auth != null;
      allow read;
      allow update, delete: if request.auth.uid == resource.data.authorId;
    }
    
    match /notifications/{notificationId} {
      allow get: if request.auth.uid == resource.data.recipientId;
      allow list: if request.query.where.recipientId == request.auth.uid;
      allow create: if request.auth != null && request.resource.data.recipientId != request.auth.uid;
      allow update: if request.auth.uid == resource.data.recipientId;
    }

    match /users/{userId}/votes/{voteId} {
      allow read, write: if request.auth.uid == userId;
    }
  }
}
