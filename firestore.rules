
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Allow reading of usernames for uniqueness check during registration
    // Allow any authenticated user to read any user's public profile
    match /users/{userId} {
      allow read: if true; 
      allow create: if request.auth != null && request.auth.uid == userId;
      allow update, delete: if request.auth != null && request.auth.uid == userId;
    }

    // Protect all other collections by default
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}
